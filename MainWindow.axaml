<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="using:redisqa.Views"
        xmlns:vm="using:redisqa.ViewModels"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="700"
        x:Class="redisqa.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="redisqa"
        Width="1200" Height="700">
        
        <Window.Styles>
                <Style Selector="Button.db-button" x:DataType="Button">
                        <Setter Property="Margin" Value="0,2"/>
                        <Setter Property="HorizontalAlignment" Value="Stretch"/>
                        <Setter Property="Background" Value="#34495e80"/>
                        <Setter Property="Foreground" Value="#ecf0f1"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Padding" Value="12,8"/>
                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        <Setter Property="FontSize" Value="13"/>
                </Style>
                
                <Style Selector="Button.tab-button" x:DataType="Button">
                        <Setter Property="Margin" Value="0,4,0,0"/>
                        <Setter Property="HorizontalAlignment" Value="Stretch"/>
                        <Setter Property="Background" Value="#2c3e50"/>
                        <Setter Property="Foreground" Value="#95a5a6"/>
                        <Setter Property="BorderThickness" Value="0,0,1,2"/>
                        <Setter Property="BorderBrush" Value="#1a252f"/>
                        <Setter Property="Padding" Value="20,8,20,10"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="FontWeight" Value="Normal"/>
                        <Setter Property="CornerRadius" Value="0,0,8,0"/>
                </Style>
                
                <Style Selector="Button.tab-button:pointerover">
                        <Setter Property="Background" Value="#34495e"/>
                        <Setter Property="Foreground" Value="#bdc3c7"/>
                </Style>
                
                <Style Selector="Button.tab-button.active">
                        <Setter Property="Margin" Value="0"/>
                        <Setter Property="Background" Value="#7ed796"/>
                        <Setter Property="Foreground" Value="#2c3e50"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Padding" Value="20,12,20,12"/>
                </Style>
        </Window.Styles>

        <Grid ColumnDefinitions="250,*" RowDefinitions="42, *">
                <Border Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" 
                        Background="#2c3e50"
                        BorderBrush="#3498db" 
                        BorderThickness="0,0,2,0">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <StackPanel Margin="15,20">

                                        <TextBlock Text="DB MANAGER" 
                                                FontSize="18" 
                                                FontWeight="Bold" 
                                                Foreground="#ecf0f1" 
                                                HorizontalAlignment="Center"
                                                LetterSpacing="2"
                                                Margin="0,0,0,15"/>
                                        
                                        <!-- Connection Status -->
                                        <Border Background="#34495e" 
                                                CornerRadius="8" 
                                                Padding="12"
                                                Margin="0,0,0,15">
                                                <Grid RowDefinitions="Auto,Auto">
                                                        <!-- Status Line -->
                                                        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="5">
                                                                <TextBlock x:Name="ConnectionStatusText"
                                                                           Text="{Binding ConnectionStatus}" 
                                                                           FontSize="13" 
                                                                           FontWeight="Bold"
                                                                           VerticalAlignment="Center"/>
                                                                <TextBlock Text="{Binding InstanceName}" 
                                                                           FontSize="12" 
                                                                           Foreground="#bdc3c7"
                                                                           VerticalAlignment="Center"/>
                                                        </StackPanel>
                                                        
                                                        <!-- Host Address and Buttons -->
                                                        <Grid Grid.Row="1" ColumnDefinitions="*,Auto,Auto" Margin="0,8,0,0">
                                                                <TextBlock Grid.Column="0"
                                                                           Text="{Binding HostAddress}" 
                                                                           FontSize="11" 
                                                                           Foreground="#95a5a6"
                                                                           VerticalAlignment="Center"/>
                                                                
                                                                <Button Grid.Column="1"
                                                                        x:Name="BtnRefresh"
                                                                        Background="Transparent"
                                                                        BorderThickness="0"
                                                                        Padding="6"
                                                                        Margin="5,0"
                                                                        ToolTip.Tip="Check Connection"
                                                                        Click="BtnRefresh_Click">
                                                                        <Image Source="/Assets/refresh.png" 
                                                                               Width="18" 
                                                                               Height="18"/>
                                                                </Button>
                                                                
                                                                <Button Grid.Column="2"
                                                                        x:Name="BtnDisconnect"
                                                                        Background="Transparent"
                                                                        BorderThickness="0"
                                                                        Padding="6"
                                                                        ToolTip.Tip="Disconnect"
                                                                        Click="BtnDisconnect_Click">
                                                                        <Image Source="/Assets/disruption.png" 
                                                                               Width="18" 
                                                                               Height="18"/>
                                                                </Button>
                                                        </Grid>
                                                </Grid>
                                        </Border>

                                        <Button x:Name="btnDb0" 
                                                Classes="db-button"
                                                Content="ðŸ“ db_0" 
                                                Click="BtnDb_Click"
                                                Tag="0"/>

                                        <Button x:Name="btnDb1" 
                                                Classes="db-button"
                                                Content="ðŸ“ db_1" 
                                                Click="BtnDb_Click"
                                                Tag="1"/>

                                        <Button x:Name="btnDb2" 
                                                Classes="db-button"
                                                Content="ðŸ“ db_2" 
                                                Click="BtnDb_Click"
                                                Tag="2"/>
                                        
                                        <Button x:Name="btnDb3" 
                                                Classes="db-button"
                                                Content="ðŸ“ db_3" 
                                                Click="BtnDb_Click"
                                                Tag="3"/>
                                        
                                        <Button x:Name="btnDb4" 
                                                Classes="db-button"
                                                Content="ðŸ“ db_4" 
                                                Click="BtnDb_Click"
                                                Tag="4"/>

                                        <Button x:Name="btnDb5" 
                                                Classes="db-button"
                                                Content="ðŸ“ db_5" 
                                                Click="BtnDb_Click"
                                                Tag="5"/>
                                        
                                        <Button x:Name="btnDb6" 
                                                Classes="db-button"
                                                Content="ðŸ“ db_6" 
                                                Click="BtnDb_Click"
                                                Tag="6"/>
                                        
                                        <Button x:Name="btnDb7" 
                                                Classes="db-button"
                                                Content="ðŸ“ db_7" 
                                                Click="BtnDb_Click"
                                                Tag="7"/>

                                        <Button x:Name="btnDb8" 
                                                Classes="db-button"
                                                Content="ðŸ“ db_8" 
                                                Click="BtnDb_Click"
                                                Tag="8"/>
                                        
                                        <Button x:Name="btnDb9" 
                                                Classes="db-button"
                                                Content="ðŸ“ db_9" 
                                                Click="BtnDb_Click"
                                                Tag="9"/>

                                        <Button x:Name="btnDb10" 
                                                Classes="db-button"
                                                Content="ðŸ“ db_10" 
                                                Click="BtnDb_Click"
                                                Tag="10"/>
                                        
                                        <Button x:Name="btnDb11" 
                                                Classes="db-button"
                                                Content="ðŸ“ db_11" 
                                                Click="BtnDb_Click"
                                                Tag="11"/>
                                        
                                        <Button x:Name="btnDb12" 
                                                Classes="db-button"
                                                Content="ðŸ“ db_12" 
                                                Click="BtnDb_Click"
                                                Tag="12"/>

                                        <Button x:Name="btnDb13" 
                                                Classes="db-button"
                                                Content="ðŸ“ db_13" 
                                                Click="BtnDb_Click"
                                                Tag="13"/>
                                        
                                        <Button x:Name="btnDb14" 
                                                Classes="db-button"
                                                Content="ðŸ“ db_14" 
                                                Click="BtnDb_Click"
                                                Tag="14"/>

                                        <Button x:Name="btnDb15" 
                                                Classes="db-button"
                                                Content="ðŸ“ db_15" 
                                                Click="BtnDb_Click"
                                                Tag="15"/>
                                        
                                </StackPanel>
                        </ScrollViewer>
                </Border>

                <Border Grid.Column="1" Grid.Row="0" Background="#2c3e50" Padding="0">
                        <Grid ColumnDefinitions="*,*,*">
                                <Button x:Name="BtnSchema"
                                        Classes="tab-button"
                                        Content="Schema"
                                        Click="BtnSchema_Click"
                                        Grid.Column="0"/>

                                <Button x:Name="BtnQueries"
                                        Classes="tab-button"
                                        Content="Queries"
                                        Click="BtnQueries_Click"
                                        Grid.Column="1"/>
                                
                                <Button x:Name="BtnData"
                                        Classes="tab-button"
                                        Content="Data"
                                        Click="BtnData_Click"
                                        Grid.Column="2"/>
                        </Grid>
                </Border>

                <Border Grid.Column="1" Grid.Row="1" Background="#7ed796" Padding="0">
                        <ContentControl Content="{Binding CurrentView}" />
                </Border>

        </Grid>

</Window>
