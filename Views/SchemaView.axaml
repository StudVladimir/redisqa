<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:redisqa.ViewModels"
             xmlns:views="using:redisqa.Views"
             xmlns:models="using:redisqa.Models"
             mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="700"
             x:Class="redisqa.Views.SchemaView"
             x:DataType="vm:SchemaViewModel">
    
    <Grid RowDefinitions="Auto,*">
        
        <!-- Toolbar -->
        <Border Grid.Row="0" 
                Background="#1a1a2e" 
                BorderBrush="#16213e"
                BorderThickness="0,0,0,2"
                Padding="15">
            <Grid ColumnDefinitions="Auto,*,Auto">
                
                <!-- Title and DB Info -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="15">
                    <TextBlock Text="Schema Editor" 
                               FontSize="20" 
                               FontWeight="Bold"
                               Foreground="#ecf0f1"
                               VerticalAlignment="Center"/>
                    <Border Background="#3d5af1" 
                            CornerRadius="4" 
                            Padding="8,4">
                        <TextBlock Text="Redis Schema" 
                                   Foreground="White"
                                   FontSize="12"
                                   FontWeight="SemiBold"/>
                    </Border>
                    <Border Background="#28B57D" 
                            CornerRadius="4" 
                            Padding="8,4">
                        <TextBlock Text="{Binding Tables.Count, StringFormat='Tables: {0}'}" 
                                   Foreground="White"
                                   FontSize="12"
                                   FontWeight="SemiBold"/>
                    </Border>
                </StackPanel>
                
                <!-- Tools -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="10">
                    <Button Content="+ Add Table"
                            x:Name="BtnAddTable"
                            Background="#3d5af1"
                            Foreground="White"
                            Padding="15,8"
                            FontWeight="SemiBold"
                            CornerRadius="5"/>
                    
                    <Button Content="ðŸ—‘ï¸ Clear"
                            x:Name="BtnClear"
                            Background="#e74c3c"
                            Foreground="White"
                            Padding="15,8"
                            CornerRadius="5"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Canvas Area -->
        <Border Grid.Row="1" 
                ClipToBounds="True">
            <Border.Background>
                <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                    <GradientStop Color="#020024" Offset="0"/>
                    <GradientStop Color="#090979" Offset="0.5"/>
                    <GradientStop Color="#28B57D" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                          VerticalScrollBarVisibility="Auto">
                <Canvas x:Name="SchemaCanvas" 
                        Width="2000" 
                        Height="1500"
                        Background="Transparent">
                    <!-- Tables will be added programmatically -->
                </Canvas>
            </ScrollViewer>
        </Border>
        
    </Grid>
    
</UserControl>