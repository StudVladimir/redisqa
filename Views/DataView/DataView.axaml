<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:redisqa.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="redisqa.Views.DataView.DataView"
             x:DataType="vm:DataViewModel">
    
    <Design.DataContext>
        <vm:DataViewModel/>
    </Design.DataContext>
    
    <Grid RowDefinitions="Auto,*">
        <!-- Ð’ÐµÑ€Ñ…Ð½ÑÑ Ð¿Ð°Ð½ÐµÐ»ÑŒ Ñ Ð²Ñ‹Ð¿Ð°Ð´Ð°ÑŽÑ‰Ð¸Ð¼ ÑÐ¿Ð¸ÑÐºÐ¾Ð¼ Ñ‚Ð°Ð±Ð»Ð¸Ñ† -->
        <Border Grid.Row="0" 
                Background="#34495e" 
                Padding="20"
                BorderBrush="#2c3e50"
                BorderThickness="0,0,0,2">
            <StackPanel Spacing="10">
                <TextBlock Text="Data Management" 
                          FontSize="20" 
                          FontWeight="Bold"
                          Foreground="#ecf0f1"/>
                
                <!-- Ð˜Ð½Ñ„Ð¾Ñ€Ð¼Ð°Ñ†Ð¸Ñ Ð¾ Ð¿Ð¾Ð´ÐºÐ»ÑŽÑ‡ÐµÐ½Ð¸Ð¸ -->
                <StackPanel Orientation="Horizontal" Spacing="15">
                    <TextBlock Text="{Binding SelectedDb, StringFormat='DB: {0}'}"
                              FontSize="12"
                              Foreground="#95a5a6"/>
                    
                    <TextBlock Text="{Binding HasSchema, StringFormat='Schema: {0}'}"
                              FontSize="12"
                              Foreground="#95a5a6"/>
                    
                    <TextBlock Text="{Binding TableNames.Count, StringFormat='Tables: {0}'}"
                              FontSize="12"
                              Foreground="#95a5a6"/>
                </StackPanel>
                
                <!-- Ð’Ñ‹Ð¿Ð°Ð´Ð°ÑŽÑ‰Ð¸Ð¹ ÑÐ¿Ð¸ÑÐ¾Ðº Ñ‚Ð°Ð±Ð»Ð¸Ñ† -->
                <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,10,0,0">
                    <TextBlock Text="Select Table:" 
                              VerticalAlignment="Center"
                              FontSize="14"
                              Foreground="#ecf0f1"
                              Width="100"/>
                    
                    <ComboBox x:Name="TableSelector"
                             ItemsSource="{Binding TableNames}"
                             SelectedItem="{Binding SelectedTable}"
                             Width="250"
                             Background="#2c3e50"
                             Foreground="#ecf0f1"
                             BorderBrush="#3498db"
                             BorderThickness="1"
                             IsEnabled="{Binding HasSchema}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" 
                                          Padding="5"
                                          Foreground="#ecf0f1"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>
            </StackPanel>
        </Border>
        
        <!-- ÐžÑÐ½Ð¾Ð²Ð½Ð°Ñ Ð¾Ð±Ð»Ð°ÑÑ‚ÑŒ Ð´Ð»Ñ Ñ€Ð°Ð±Ð¾Ñ‚Ñ‹ Ñ Ð´Ð°Ð½Ð½Ñ‹Ð¼Ð¸ -->
        <Grid Grid.Row="1" Background="#2c3e50">
            <!-- Ð’Ñ€ÐµÐ¼ÐµÐ½Ð½Ñ‹Ð¹ ÐºÐ¾Ð½Ñ‚ÐµÐ½Ñ‚ -->
            <StackPanel VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       Spacing="10"
                       IsVisible="{Binding !HasSchema}">
                <TextBlock Text="âš " 
                          FontSize="48"
                          HorizontalAlignment="Center"
                          Foreground="#e74c3c"/>
                <TextBlock Text="No schema found" 
                          FontSize="18"
                          HorizontalAlignment="Center"
                          Foreground="#95a5a6"/>
                <TextBlock Text="Please create a schema first in Schema View" 
                          FontSize="14"
                          HorizontalAlignment="Center"
                          Foreground="#7f8c8d"/>
            </StackPanel>
            
            <!-- ÐšÐ¾Ð½Ñ‚ÐµÐ½Ñ‚ ÐºÐ¾Ð³Ð´Ð° ÐµÑÑ‚ÑŒ ÑÑ…ÐµÐ¼Ð° Ð¸ Ð²Ñ‹Ð±Ñ€Ð°Ð½Ð° Ñ‚Ð°Ð±Ð»Ð¸Ñ†Ð° -->
            <Grid IsVisible="{Binding HasSchema}" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Ð—Ð°Ð³Ð¾Ð»Ð¾Ð²Ð¾Ðº Ñ‚Ð°Ð±Ð»Ð¸Ñ†Ñ‹ -->
                <Border Grid.Row="0" 
                       Background="#34495e"
                       CornerRadius="5"
                       Padding="15"
                       Margin="0,0,0,20">
                    <TextBlock Text="{Binding SelectedTable, StringFormat='Working with table: {0}'}"
                              FontSize="18"
                              FontWeight="SemiBold"
                              Foreground="#ecf0f1"/>
                </Border>
                
                <!-- Drag and Drop Ð¾Ð±Ð»Ð°ÑÑ‚ÑŒ -->
                <Border Grid.Row="1"
                       x:Name="DropZone"
                       Background="#34495e"
                       BorderBrush="#3498db"
                       BorderThickness="2"
                       CornerRadius="10"
                       Padding="40"
                       DragDrop.AllowDrop="True">
                    
                    <StackPanel VerticalAlignment="Center" 
                               HorizontalAlignment="Center"
                               Spacing="20">
                        
                        <!-- Ð˜ÐºÐ¾Ð½ÐºÐ° Ð·Ð°Ð³Ñ€ÑƒÐ·ÐºÐ¸ -->
                        <TextBlock Text="ðŸ“" 
                                  FontSize="64"
                                  HorizontalAlignment="Center"
                                  Foreground="#3498db"/>
                        
                        <!-- ÐžÑÐ½Ð¾Ð²Ð½Ð¾Ð¹ Ñ‚ÐµÐºÑÑ‚ -->
                        <TextBlock Text="Drag and drop CSV file here"
                                  FontSize="20"
                                  FontWeight="SemiBold"
                                  HorizontalAlignment="Center"
                                  Foreground="#ecf0f1"/>
                        
                        <TextBlock Text="or"
                                  FontSize="14"
                                  HorizontalAlignment="Center"
                                  Foreground="#95a5a6"/>
                        
                        <!-- ÐšÐ½Ð¾Ð¿ÐºÐ° Ð²Ñ‹Ð±Ð¾Ñ€Ð° Ñ„Ð°Ð¹Ð»Ð° -->
                        <Button x:Name="BtnSelectFile"
                               Content="Select CSV File"
                               Click="BtnSelectFile_Click"
                               Padding="20,10"
                               Background="#3498db"
                               Foreground="White"
                               BorderThickness="0"
                               CornerRadius="5"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Cursor="Hand">
                            <Button.Styles>
                                <Style Selector="Button:pointerover">
                                    <Setter Property="Background" Value="#2980b9"/>
                                </Style>
                            </Button.Styles>
                        </Button>
                        
                        <!-- Ð˜Ð½Ñ„Ð¾Ñ€Ð¼Ð°Ñ†Ð¸Ñ Ð¾ Ð·Ð°Ð³Ñ€ÑƒÐ¶ÐµÐ½Ð½Ð¾Ð¼ Ñ„Ð°Ð¹Ð»Ðµ -->
                        <Border IsVisible="{Binding HasLoadedFile}"
                               Background="#27ae60"
                               CornerRadius="5"
                               Padding="15,10"
                               Margin="0,20,0,0">
                            <StackPanel Spacing="5">
                                <TextBlock Text="âœ“ File loaded successfully"
                                          FontSize="14"
                                          FontWeight="SemiBold"
                                          HorizontalAlignment="Center"
                                          Foreground="White"/>
                                <TextBlock Text="{Binding LoadedFileName}"
                                          FontSize="12"
                                          HorizontalAlignment="Center"
                                          Foreground="White"/>
                                <TextBlock Text="{Binding CsvData.Count, StringFormat='Rows: {0}'}"
                                          FontSize="12"
                                          HorizontalAlignment="Center"
                                          Foreground="White"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- ÐšÐ½Ð¾Ð¿ÐºÐ° Insert Data -->
                        <Button x:Name="BtnInsertData"
                               Content="Insert Data to Redis"
                               Click="BtnInsertData_Click"
                               Padding="25,12"
                               Background="#27ae60"
                               Foreground="White"
                               BorderThickness="0"
                               CornerRadius="5"
                               FontSize="16"
                               FontWeight="Bold"
                               Cursor="Hand"
                               IsEnabled="{Binding HasLoadedFile}"
                               IsVisible="{Binding HasLoadedFile}"
                               Margin="0,20,0,0">
                            <Button.Styles>
                                <Style Selector="Button:pointerover">
                                    <Setter Property="Background" Value="#229954"/>
                                </Style>
                                <Style Selector="Button:disabled">
                                    <Setter Property="Background" Value="#95a5a6"/>
                                    <Setter Property="Opacity" Value="0.5"/>
                                </Style>
                            </Button.Styles>
                        </Button>
                        
                        <!-- ÐŸÐ¾Ð´ÑÐºÐ°Ð·ÐºÐ° -->
                        <TextBlock Text="Supported format: .csv files only"
                                  FontSize="12"
                                  HorizontalAlignment="Center"
                                  Foreground="#7f8c8d"
                                  Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
